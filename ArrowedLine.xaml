<UserControl x:Class="BpToolsWPFClientTest.ArrowedLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BpToolsWPFClientTest"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000">
    <Canvas>
        <Path Stroke="Gray" StrokeThickness="1">
            <Path.Data>
                <LineGeometry StartPoint="{Binding StartPoint}" EndPoint="{Binding EndPoint}" />
                <!--<LineGeometry StartPoint="0,0" EndPoint="100,100" />-->
            </Path.Data>
        </Path>
        <local:LineArrow x:Name="LineArrow" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Canvas>
</UserControl>
