<local:Stage x:Class="BpToolsWPFClientTest.StageBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BpToolsWPFClientTest"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="60">
    <Grid>
        <Path Stretch="Fill" Stroke="Black" StrokeThickness="1" Fill="{Binding BpFontColor}" Opacity="0.5"
              Data = "M0,0 L60,0 60,30 0,30 Z">
        </Path>
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White">
            <TextBlock FontFamily="{Binding BpFontFamily}" Foreground="Black" FontSize="{Binding BpFontSize}" TextWrapping="Wrap" Text="{Binding DisplayName}" HorizontalAlignment="Left" VerticalAlignment="Center" />
        </Border>
    </Grid>
</local:Stage>
