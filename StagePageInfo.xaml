<local:Stage x:Class="BpToolsWPFClientTest.StagePageInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BpToolsWPFClientTest"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <Path Stretch="Fill" Stroke="Gray" StrokeThickness="1" Fill="White"
              Data = "M0,0 L60,0 60,30 0,30 Z">
        </Path>
        <StackPanel>
            <Border BorderThickness="1" BorderBrush="Gray" VerticalAlignment="Top" Background="White">
                <TextBlock FontFamily="{Binding BpFontFamily}" FontSize="{Binding BpFontSize}" TextWrapping="Wrap" Text="{Binding DisplayName}" HorizontalAlignment="Left" VerticalAlignment="Center" />
            </Border>
            <Border VerticalAlignment="Top">
                <TextBlock FontFamily="{Binding BpFontFamily}" FontSize="{Binding BpFontSize}" TextWrapping="Wrap" Text="{Binding Description}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2"/>
            </Border>
        </StackPanel>
    </Grid>
</local:Stage>
