<local:Stage x:Class="BpToolsWPFClientTest.StageException"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BpToolsWPFClientTest"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="60">
    <Grid>
        <Viewbox Stretch="Fill">
            <Grid>
                <Path Fill="Red"
                  Data = "M57,0 L60,0 60,30 57,30 Z">
                </Path>
                <Path Stroke="Gray" StrokeThickness="1" Fill="White"
                  Data = "M0,0 L40,0 57,15 40,30 0,30 Z">
                </Path>
                <Path Fill="Red"
                  Data = "M0,0 L3,0 3,30 0,30 Z">
                </Path>
            </Grid>
        </Viewbox>
        <Border >
            <TextBlock FontFamily="{Binding BpFontFamily}" FontSize="{Binding BpFontSize}" TextWrapping="Wrap" Text="{Binding DisplayName}" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
    </Grid>
</local:Stage>
    
