<local:Stage x:Class="BpToolsWPFClientTest.StageChoiceEnd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BpToolsWPFClientTest"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="60">
    <Grid>
        <Path Stretch="Fill" Stroke="Gray" StrokeThickness="1" Fill="White"
              Data = "M30,0 L60,15 L30,30 L0,15 Z">
        </Path>
        <Border >
            <TextBlock FontFamily="{Binding BpFontFamily}" FontSize="{Binding BpFontSize}" TextWrapping="Wrap" Text="{Binding DisplayName}" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
    </Grid>


</local:Stage>
